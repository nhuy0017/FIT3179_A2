{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Females",
    "background":"#dab56c",
    "data": {
        "url": "https://raw.githubusercontent.com/nhuy0017/FIT3179/main/Homework10/Females.csv"
    },
    "width": 450,
    "height": 450,
    "params": [
        {
            "name": "AgeRangeSelection",
            "bind": {
                "input": "select",
                "options": [
                    "All Aboriginal and Torres Strait Islander people",
                    "Under_15_years",
                    "15to24_years",
                    "25to34_years",
                    "35to44_years",
                    "45to54_years",
                    "55to64_years",
                    "65_years_and_over"
                ],
                "labels": [
                    "All Aboriginal and Torres Strait Islander people",
                    "Under 15 years",
                    "15 to 24 years",
                    "25 to 34 years",
                    "35 to 44 years",
                    "45 to 54 years",
                    "55 to 64 years",
                    "65 years and over"
                ],
                "name": "Select Age Range: "
            },
            "value": "All Aboriginal and Torres Strait Islander people"
        }
    ],
    "transform": [
        {
            "filter": "datum.age_range == AgeRangeSelection"
        }
    ],
    "encoding": {
        "theta": {
            "field": "value", 
            "type": "quantitative",
            "stack": true
        },
        "color": {
            "field": "category", 
            "type": "nominal",
            "scale": {"scheme": "paired"},
            "title": "Category",
            "legend": null
        },
        "tooltip": [
            {"field": "category", "type": "nominal", "title": "Assistance Need"},
            {"field": "value", "type": "quantitative", "title": "Count of Persons"}
        ]
    },
    "layer": [
        {
            "mark": {"type": "arc", "outerRadius": 200, "innerRadius": 0}
        },
        {
            "mark": {
                "type": "text",
                "radius": 220
            },
            "encoding": {
                "text": {"field": "value", 
                          "type": "quantitative",
                          "format": ","}
            }
        }
    ]
}